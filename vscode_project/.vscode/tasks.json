{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++.exe check syntax",
			"command": "clang++.exe",
			"args": [
				"-c",
				"-fsyntax-only",
				"-I${RIGPP_RUNTIME}/include",
				"${file}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
		}
	]
}